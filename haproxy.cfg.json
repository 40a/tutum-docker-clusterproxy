{
    "global": [
        "maxconn 4096",
        "pidfile /var/run/haproxy.pid",
        "user haproxy",
        "group haproxy",
        "daemon"
    ],
    "defaults": [
        "mode    $MODE",
        "option  redispatch",
        "maxconn 4096",
        "contimeout      5000",
        "clitimeout      50000",
        "srvtimeout      50000"
    ],
    "frontend": {
        "http": [
            "bind 0.0.0.0:$PORT",
            "default_backend cluster"
        ]
    },
    "backend": {
        "cluster": [
            "balance $BALANCE"
        ]
    }
}